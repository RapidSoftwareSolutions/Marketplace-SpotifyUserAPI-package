{
    "package": "SpotifyUserAPI",
    "tagline": "Spotify Web API Wrapper",
    "description": "Through the Spotify Web API your applications can retrieve and manage Spotify content.",
    "image": "https://developer.spotify.com/wp-content/uploads/2016/07/icon1@2x.png",
    "repo": "https://github.com/RapidSoftwareSolutions/Marketplace-SpotifyUserAPI-package",
    "accounts": {
        "domain": "spotify.com",
        "credentials": [
            "client_id",
            "client_key"
        ]
    },
    "blocks": [{
        "name":"getAccessToken",
        "args":[
            {
                "name": "client_id",
                "type": "String",
                "info": "The Client ID obtained from Spotify."
            },
            {
                "name": "client_key",
                "type": "String",
                "info": "The Client Secret obtained from Spotify."
            },
            {
                "name": "code",
                "type": "String",
                "info": ""
            }
        ],
        "callbacks":[
            {
                "name":"error",
                "info": "Error"
            },
            {
                "name":"success",
                "info": "Success => channels: Array <string>"
            }
        ]
    }
    ]
}
